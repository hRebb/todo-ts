<!DOCTYPE html>
<html lang="en">
   <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>ToDo List with TS, EXPRESS & EJS</title>
    </head>
    <body>
        <h1>ToDo List</h1>
        <form method="post" action="/task" >
            <input type="text" placeholder="New Task" name="task" autofocus>
            <button type="submit">Add</button>
        </form> 
        <h3>Tasks</h3>

        <ul>
            <% tasks.forEach((task, idx) => { %>
                <li>
                    <% if (task.done) { %>
                        <strong><%= idx %></strong>
                        <s><%= task.title %></s> 
                        | <a href="#">Delete</a>
                    <% } else { %>
                        <strong><%= idx %></strong>
                        <%= task.title %> 
                        | <a href="/task/<%= idx %>/done">Completed</a>
                    <% } %>
                </li>
            <% }); %>
        </ul>
    </body>
</html>